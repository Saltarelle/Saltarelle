		Write((mask & (1 << i)) == 0 ? FormatInvariant(", p{0}", i + 1) : ", (object)null");
	WriteLine(");");
	PopIndent();
	WriteLine("}");
	WriteLine("");
}

private void WriteMethods(int numParams) {
	for (int i = 0; i < 1 << numParams; i++)
